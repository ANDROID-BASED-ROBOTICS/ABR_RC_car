<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/driveCarl"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggleCarl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="@string/toggleCarl" />

    <ToggleButton
        android:id="@+id/toggleDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textAccel"
        android:layout_centerHorizontal="true"
        android:text="@string/Direction"
        android:textOff="@string/Forward"
        android:textOn="@string/Reverse" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/toggleDirection"
        android:text="@string/Direction"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textAccel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleCarl"
        android:layout_below="@+id/toggleCarl"
        android:layout_marginTop="26dp"
        android:text="@string/Accel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toggleAuto"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/toggleDirection"
        android:text="@string/autoCarl"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ToggleButton
        android:id="@+id/toggleAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textAccel"
        android:layout_alignLeft="@+id/textAuto"
        android:layout_alignRight="@+id/textAuto"
        android:layout_marginRight="17dp"
        android:text="@string/toggleCarl" />

    <TextView
        android:id="@+id/textIRLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCompass"
        android:layout_marginTop="51dp"
        android:layout_toLeftOf="@+id/toggleAuto"
        android:text="@string/IRLabel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textIRLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="@string/IRFront"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textLeftFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFront"
        android:layout_toLeftOf="@+id/textFront"
        android:text="@string/IRLeftFront"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textRightFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFront"
        android:layout_toRightOf="@+id/textFront"
        android:text="@string/IRRightFront"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRightFront"
        android:layout_toRightOf="@+id/textIRLabel"
        android:text="@string/IRRight"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAccel"
        android:layout_below="@+id/textAccel"
        android:text="@string/Compass"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textGyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCompass"
        android:layout_below="@+id/textCompass"
        android:text="@string/Gyro"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textRight"
        android:layout_alignBottom="@+id/textRight"
        android:layout_alignRight="@+id/toggleCarl"
        android:text="@string/IRLeft"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>